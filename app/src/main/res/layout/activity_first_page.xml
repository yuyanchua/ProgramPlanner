<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainPageActivity"
    android:background="#FCFCFC">

        <ImageView
            android:id="@+id/imageViewProgramPlanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mainicon"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/imageButtonLogIn"
            android:layout_width="198dp"
            android:layout_height="94dp"
            android:layout_marginStart="106dp"
            android:layout_marginTop="183dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewProgramPlanner"
            app:srcCompat="@drawable/loginicon"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/imageButtonSignUp"
            android:layout_width="219dp"
            android:layout_height="79dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="36dp"
            android:background="#FFFFFF"
            android:tint="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonLogIn"
            app:srcCompat="@drawable/signup"
            tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>